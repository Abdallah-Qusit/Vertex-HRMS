@{
    ViewData["Title"] = "Access Denied";
    Layout = "~/Views/Shared/_Layout_login.cshtml";
}

<div class="auth-header">
    <h1 class="auth-title">@TS["Error"]</h1>
    <p class="auth-subtitle">You do not have permission to access this page.</p>
</div>

<form asp-action="Logout" asp-controller="Auth" method="post">
    <button type="submit" class="btn-primary">Return to Login</button>
</form>

