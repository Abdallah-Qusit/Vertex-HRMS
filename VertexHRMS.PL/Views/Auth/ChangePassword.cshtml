@model VertexHRMS.BLL.ModelVM.Models.ChangePasswordModel
@{
    ViewData["Title"] = "Change Password";
    Layout = "~/Views/Shared/_Layout_login.cshtml";
}

<div class="auth-header">
    <h1 class="auth-title">@TS["Change_Your_Password"]</h1>
    <p class="auth-subtitle">@TS["Enter_current_and_new_password"]</p>
</div>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

@Html.ValidationSummary(true, "", new { @class = "text-validation-summary-errors alert alert-danger" })

<form asp-action="ChangePassword" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Email" />

    <div class="form-group">
        <label asp-for="CurrentPassword" class="form-label">@TS["Current_Password"]</label>
        <input asp-for="CurrentPassword" type="password" class="form-input" placeholder="@TS["Enter_current_password"]" required />
        <span asp-validation-for="CurrentPassword" class="field-validation-error"></span>
    </div>

    <div class="form-group">
        <label asp-for="NewPassword" class="form-label">@TS["New_Password"]</label>
        <input asp-for="NewPassword" type="password" class="form-input" placeholder="@TS["Enter_new_password"]" required />
        <span asp-validation-for="NewPassword" class="field-validation-error"></span>
    </div>

    <div class="form-group">
        <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
        <input asp-for="ConfirmPassword" type="password" class="form-input" placeholder="@TS["Confirm_new_password"]" required />
        <span asp-validation-for="ConfirmPassword" class="field-validation-error"></span>
    </div>

    <button type="submit" class="btn-primary">@TS["Change_Password"]</button>
</form>
