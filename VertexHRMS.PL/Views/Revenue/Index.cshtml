@model IDictionary<int, IEnumerable<VertexHRMS.DAL.Entities.Revenue>>
@{
    ViewData["Title"] = "Revenue Report";
    var mode = ViewBag.Mode as string;
    var year = (int)ViewBag.Year;
}

<style>
    .att-page {
        width: 100%;
        padding: 28px 40px;
        box-sizing: border-box;
        margin-top: 65px;
    }

    .nav-buttons {
        display: flex;
        justify-content: center;
        gap: 10px;
        margin-bottom: 14px;
    }

        .nav-buttons .btn {
            padding: 5px 16px;      /* عرض أصغر */
    border-radius: 8px;
    cursor: pointer;
    border: none;
    font-weight: 600;
    height: 34px;           /* أقصر */
    color: #fff;
    background-color: var(--text);
    text-align: center;     /* النص في النص */
    line-height: 34px;      /* يوزن النص عمودي */
    text-decoration: none;  /* يشيل underline */
    display: inline-block;  /* يحافظ على الشكل */
        }
    .filters-toolbar {
        display: flex;
        justify-content: center; /* بدل space-between → center */
        align-items: center;
        gap: 12px;
        background: black;
        padding: 12px;
        border-radius: 10px;
        border: 1px solid var(--text);
        margin-bottom: 16px;
    }
    .toolbar-left {
        margin-left: 0; /* مش محتاج مسافة يمين */
        display: flex;
        gap: 15px;
        align-items: center;
        flex-wrap: wrap;
    }
    .ctrl {
        min-width: 160px;
        max-width: 220px;
    }
    .ctrl.small {
        min-width: 120px;
    }
    .styled-select, .styled-input {
        width: 100%;
        padding: 9px 12px;
        border-radius: 8px;
        border: 1px solid rgba(255,255,255,0.1);
        background: transparent;
        color: #fff;
        box-sizing: border-box;
        font-size: 14px;
        height: 40px;
        appearance: none;
        cursor: pointer;
    }

    .styled-select option {
        background: #222;
        color: #fff;
        padding: 10px;
    }
    .btn {
        padding: 9px 14px;
        border-radius: 8px;
        cursor: pointer;
        border: none;
        font-weight: 600;
        height: 40px;
        color: #fff;
        background-color: var(--text);
    }
    .table-card {
        background: black;
        padding: 12px;
        border-radius: 10px;
        border: 1px solid var(--text);
        box-sizing: border-box;
    }
    .table-wrapper {
        overflow: auto;
    }
    table.attendance {
        width: 100%;
        border-collapse: collapse;
        font-size: 14px;
        min-width: 760px;
    }
    table.attendance th, table.attendance td {
        padding: 10px 12px;
        text-align: left;
        color: white;
    }
    table.attendance thead th {
        color: var(--text);
        font-weight: 700;
        font-size: 18px;
    }
    .table-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 12px;
        color: #9aa4b2;
    }
</style>

<div class="att-page">
    <!-- navigation -->
    <div class="nav-buttons">
        <a asp-controller="Revenue" asp-action="Index" class="btn">@TS["Revenue"]</a>
        <a asp-controller="Project" asp-action="Index" class="btn">@TS["Projects"]</a>
        <a asp-controller="ProjectTask" asp-action="Index" class="btn">@TS["Tasks"]</a>
        <a asp-controller="Training" asp-action="Index" class="btn">@TS["Trainings"]</a>
    </div>
    <!-- toolbar -->
    <div class="filters-toolbar">
        <div class="toolbar-left">
            <form method="get" asp-action="Index" asp-controller="Revenue" style="display:flex; gap:10px;">
                <div class="ctrl small">
                    <input type="number" name="year" value="@year" class="styled-input" />
                </div>
                <div class="ctrl small">
                    <select name="mode" class="styled-select">
                        <option value="Quarterly" selected="@(mode == "Quarterly")">@TS["Quarterly"]</option>
                        <option value="Monthly" selected="@(mode == "Monthly")">@TS["Monthly"]</option>
                    </select>
                </div>
                <button type="submit" class="btn">@TS["Apply"]</button>
            </form>
        </div>
    </div>

    <!-- table -->
    <div class="table-card">
        <div style="display:flex; justify-content:space-between; align-items:center; margin-bottom:10px;">
            <h3 style="margin:0; color:white;">Revenue (@mode) - @year</h3>
        </div>

        <div class="table-wrapper">
            <table class="attendance">
                <thead>
                    <tr>
                        <th>@(mode == "Quarterly" ? "Quarter" : "Month")</th>
                        <th>@TS["Total_Revenue"]</th>
                        <th>@TS["Total_Expenses"]</th>
                        <th>@TS["Total Profit"]</th>
                        <th>@TS["Date"]</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var group in Model)
                    {
                        <tr>
                            <td>@group.Key</td>
                            <td>@group.Value.Sum(r => r.Amount)</td>
                            <td>@group.Value.Sum(r => r.Expenses)</td>
                            <td>@group.Value.Sum(r => r.Profit)</td>
                            <td>
                                @foreach (var rev in group.Value)
                                {
                                    <div>
                                        @rev.MonthYear.ToString("yyyy-MM-dd"):
                                    </div>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="table-footer">
            <div>@Model.Sum(g => g.Value.Count()) @TS["Record"]</div>
        </div>
    </div>
</div>
