@model IEnumerable<VertexHRMS.BLL.ModelVM.LeaveRequestVM.GetByEmployeeVM>
@{
    ViewData["Title"] = "Leave Requests";
    var year = (int)ViewBag.Year;
    var status = ViewBag.Status as string;
}

<style>
    /* نفس الـ CSS بتاع الـ Revenue */
    .att-page {
        width: 100%;
        padding: 28px 40px;
        box-sizing: border-box;
        margin-top: 65px;
    }

    .nav-buttons {
        display: flex;
        justify-content: center;
        gap: 10px;
        margin-bottom: 14px;
    }

    .nav-buttons .btn {
        padding: 5px 16px;
        border-radius: 8px;
        cursor: pointer;
        border: none;
        font-weight: 600;
        height: 34px;
        color: #fff;
        background-color: var(--text);
        text-align: center;
        line-height: 34px;
        text-decoration: none;
        display: inline-block;
    }

    .filters-toolbar {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 12px;
        background: black;
        padding: 12px;
        border-radius: 10px;
        border: 1px solid var(--text);
        margin-bottom: 16px;
    }

    .toolbar-left {
        display: flex;
        gap: 15px;
        align-items: center;
        flex-wrap: wrap;
    }

    .ctrl {
        min-width: 160px;
        max-width: 220px;
    }

    .ctrl.small {
        min-width: 120px;
    }

    .styled-select, .styled-input {
        width: 100%;
        padding: 9px 12px;
        border-radius: 8px;
        border: 1px solid rgba(255,255,255,0.1);
        background: transparent;
        color: #fff;
        font-size: 14px;
        height: 40px;
        box-sizing: border-box;
    }

    .styled-select option {
        background: #222;
        color: #fff;
        padding: 10px;
    }

    .btn {
        padding: 9px 14px;
        border-radius: 8px;
        cursor: pointer;
        border: none;
        font-weight: 600;
        height: 40px;
        color: #fff;
        background-color: var(--text);
    }

    .table-card {
        background: black;
        padding: 12px;
        border-radius: 10px;
        border: 1px solid var(--text);
    }

    .table-wrapper {
        overflow: auto;
    }

    table.attendance {
        width: 100%;
        border-collapse: collapse;
        font-size: 14px;
        min-width: 760px;
    }

    table.attendance th, table.attendance td {
        padding: 10px 12px;
        text-align: left;
        color: white;
    }

    table.attendance thead th {
        color: var(--text);
        font-weight: 700;
        font-size: 18px;
    }

    .table-footer {
        display: flex;
        justify-content: space-between;
        margin-top: 12px;
        color: #9aa4b2;
    }

    .styled-select {
        line-height: normal; /* يمنع التضخيم */
    }
</style>

<div class="att-page">
    <!-- navigation -->
    <div class="nav-buttons">
        <a asp-controller="LeaveRequest" asp-action="Index" class="btn">Leave Requests</a>
        <a asp-controller="LeaveEntitlement" asp-action="Index" class="btn">Entitlements</a>
        <a asp-controller="LeaveLedger" asp-action="Index" class="btn">Leave Ledger</a>
        <a asp-controller="LeaveRequestEmail" asp-action="Index" class="btn">Leave Request Emails</a>
    </div>

    <!-- toolbar -->
    <div class="filters-toolbar">
        <div class="toolbar-left">
            <form method="get" asp-action="Index" asp-controller="LeaveRequest" style="display:flex; gap:10px;">
                <div class="ctrl small">
                    <input type="number" name="year" value="@year" class="styled-input" />
                </div>
                <div class="ctrl small">
                    <select name="status" class="styled-select">
                        <option value="All" selected="@(status == "All")">All</option>
                        <option value="Pending" selected="@(status == "Pending")">Pending</option>
                        <option value="Approved" selected="@(status == "Approved")">Approved</option>
                        <option value="Rejected" selected="@(status == "Rejected")">Rejected</option>
                    </select>
                </div>
                <button type="submit" class="btn">Apply</button>
            </form>
        </div>
    </div>

    <!-- table -->
    <div class="table-card">
        <div style="display:flex; justify-content:space-between; align-items:center; margin-bottom:10px;">
            <h3 style="margin:0; color:white;">Leave Requests (@status) - @year</h3>
        </div>

        <div class="table-wrapper">
            <table class="attendance">
                <thead>
                    <tr>
                        <th>Employee</th>
                        <th>Leave Type</th>
                        <th>Start</th>
                        <th>End</th>
                        <th>Days</th>
                        <th>Status</th>
                        <th>Reason</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var req in Model)
                    {
                        <tr>
                            <td>@req.Employee?.EmployeeId</td>
                            <td>@(string.Join(" ", req.Employee.FirstName, req.Employee.LastName))</td>
                            <td>@req.LeaveType?.Name</td>
                            <td>@req.StartDateTime.ToString("yyyy-MM-dd")</td>
                            <td>@req.EndDateTime.ToString("yyyy-MM-dd")</td>
                            <td>@req.GetDurationInDays()</td>
                            <td>@req.Status</td>
                            <td>@req.RejectionReason</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="table-footer">
            <div>@Model.Count() records</div>
        </div>
    </div>
</div>

