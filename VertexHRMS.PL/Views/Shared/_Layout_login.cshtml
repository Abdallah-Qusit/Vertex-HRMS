
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VertexHRMS</title>
    <link href="~/css/auth.css" rel="stylesheet" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <canvas id="constellation-canvas" aria-hidden="true"></canvas>

    <div class="auth-container">
        <div class="auth-card">
            @RenderBody()
        </div>
    </div>

    <script src="~/js/constellation.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>