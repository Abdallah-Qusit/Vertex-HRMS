@model IEnumerable<VertexHRMS.DAL.Entities.ProjectTask>
@{
    ViewData["Title"] = "Tasks Report";
    var projectId = ViewBag.ProjectId as int?;
    var employeeId = ViewBag.EmployeeId as int?;
    var status = ViewBag.Status as string;
}

<style>
    .att-page {
        width: 100%;
        padding: 28px 40px;
        box-sizing: border-box;
        margin-top: 65px;
    }

    .nav-buttons {
        display: flex;
        justify-content: center;
        gap: 10px;
        margin-bottom: 14px;
    }

        .nav-buttons .btn {
            padding: 5px 16px;
            border-radius: 8px;
            cursor: pointer;
            border: none;
            font-weight: 600;
            height: 34px;
            color: #fff;
            background-color: var(--text);
            text-align: center;
            line-height: 34px;
            text-decoration: none;
            display: inline-block;
        }

    .filters-toolbar {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 12px;
        background: black;
        padding: 12px;
        border-radius: 10px;
        border: 1px solid var(--text);
        margin-bottom: 16px;
    }

    .ctrl {
        min-width: 160px;
        max-width: 220px;
    }

    .styled-select, .styled-input {
        width: 100%;
        padding: 9px 12px;
        border-radius: 8px;
        border: 1px solid rgba(255,255,255,0.1);
        background: transparent;
        color: #fff;
        box-sizing: border-box;
        font-size: 14px;
        height: 40px;
        appearance: none;
        cursor: pointer;
    }

        .styled-select option {
            background: #222;
            color: #fff;
            padding: 10px;
        }

    .btn {
        padding: 9px 14px;
        border-radius: 8px;
        cursor: pointer;
        border: none;
        font-weight: 600;
        height: 40px;
        color: #fff;
        background-color: var(--text);
    }

    .table-card {
        background: black;
        padding: 12px;
        border-radius: 10px;
        border: 1px solid var(--text);
        box-sizing: border-box;
    }

    .table-wrapper {
        overflow: auto;
    }

    table.attendance {
        width: 100%;
        border-collapse: collapse;
        font-size: 14px;
        min-width: 760px;
    }

        table.attendance th, table.attendance td {
            padding: 10px 12px;
            text-align: left;
            color: white;
        }

        table.attendance thead th {
            color: var(--text);
            font-weight: 700;
            font-size: 18px;
        }

    .table-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 12px;
        color: #9aa4b2;
    }
</style>

<div class="att-page">
    <!-- navigation -->
    <div class="nav-buttons">
        <a asp-controller="Revenue" asp-action="Index" class="btn">Revenue</a>
        <a asp-controller="Project" asp-action="Index" class="btn">Projects</a>
        <a asp-controller="ProjectTask" asp-action="Index" class="btn">Tasks</a>
        <a asp-controller="Training" asp-action="Index" class="btn">Trainings</a>
    </div>

    <!-- filter toolbar -->
    <div class="filters-toolbar">
        <form method="get" asp-action="Index" asp-controller="ProjectTask" style="display:flex; gap:10px;">
            <div class="ctrl">
                <input type="number" name="projectId" value="@projectId" placeholder="Project ID" class="styled-input" />
            </div>
            <div class="ctrl">
                <input type="number" name="employeeId" value="@employeeId" placeholder="Employee ID" class="styled-input" />
            </div>
            <div class="ctrl">
                <select name="status" class="styled-select">
                    <option value="">-- Status --</option>
                    <option value="Pending" selected="@(status == "Active")">Pending</option>
                    <option value="InProgress" selected="@(status == "Completed")">In Progress</option>
                    <option value="Completed" selected="@(status == "Dlayed")">Completed</option>
                </select>
            </div>
            <button type="submit" class="btn">Apply</button>
        </form>
    </div>

    <!-- table -->
    <div class="table-card">
        <div style="display:flex; justify-content:space-between; align-items:center; margin-bottom:10px;">
            <h3 style="margin:0; color:white;">Tasks</h3>
        </div>

        <div class="table-wrapper">
            <table class="attendance">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Title</th>
                        <th>Status</th>
                        <th>Start Date</th>
                        <th>Due Date</th>
                        <th>Assigned Employee</th>
                        <th>Project</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var task in Model)
                    {
                        <tr>
                            <td>@task.Id</td>
                            <td>@task.Title</td>
                            <td>@task.Status</td>
                            <td>@task.StartDate.ToString("yyyy-MM-dd")</td>
                            <td>@(task.DueDate?.ToString("yyyy-MM-dd") ?? "-")</td>
                            <td>@(task.AssignedTo != null? string.Join(" ", task.AssignedTo.FirstName, task.AssignedTo.LastName): "Unassigned")</td>
                            <td>@(task.Project?.Name ?? "-")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="table-footer">
            <div>@Model.Count() records</div>
        </div>
    </div>
</div>
