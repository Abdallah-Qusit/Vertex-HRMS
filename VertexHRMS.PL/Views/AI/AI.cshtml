@{
    ViewData["Title"] = "AI Assistant";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
<style>
.chat-container {
    max-width: 1200px;
    min-width: 1200px;
    height: 72vh;
    margin: 0 auto;
    margin-top: 62px;
    background: black;
    backdrop-filter: blur(20px);
    border-radius: 20px;
    box-shadow: 0 20px 60px black;
    display: flex;
    flex-direction: column;
    overflow: hidden;
    border: 1px solid white;
}

.chat-header {
    background: linear-gradient(180deg, var(--text) 0%, black 100%);
    color: white;
    padding: 20px 25px;
    display: flex;
    align-items: center;
    gap: 15px;
}

.ai-avatar {
    width: 45px;
    height: 45px;
    background: linear-gradient(135deg, var(--text) 0%, black 100%);
    border: 2px solid white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 20px;
}

.header-info h1 {
    font-size: 20px;
    font-weight: 600;
    margin-bottom: 2px;
}

.header-info p {
    font-size: 14px;
    opacity: 0.9;
}

.status-indicator {
    width: 8px;
    height: 8px;
    color: var(--text);
    font-weight: bold;
    font-size: 50px;
    margin-left: auto;
    margin-right: 60px;
    margin-bottom: 70px;
    animation: pulse 2s infinite;
}

@@keyframes pulse {
    0%, 100% {
        color: var(--text);
    }

    50% {
        color: white;
    }
}

.chat-messages {
    flex: 1;
    overflow-y: auto;
    padding: 25px;
    background: black;
}

    .chat-messages::-webkit-scrollbar {
        width: 6px;
    }

    .chat-messages::-webkit-scrollbar-track {
        background: transparent;
    }

.message-group {
    width: 100%;
    margin-bottom: 25px;
    display: flex;
    align-items: flex-start;
    gap: 12px;
}

.message-avatar {
    width: 35px;
    height: 35px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    font-size: 16px;
    margin-top: 5px;
}

.user .message-avatar {
    background: white;
    color: black;
}

.assistant .message-avatar {
    background: linear-gradient(135deg, var(--text) 0%, black 100%);
    color: white;
}

.message-content {
    display: flex;
    flex-direction: column;
    flex: 1 1 auto; /* take available space but allow shrink */
    max-width: calc(100% - 60px); /* leave room for avatar */
    margin: 0; /* important: no auto margin here */
    align-items: flex-start; /* assistant messages align left by default */
}

.message-bubble {
    display: block;
    background: white;
    padding: 16px 20px;
    border-radius: 18px;
    max-width: 70%; /* optional: limit bubble width */
    white-space: pre-wrap; /* wrap long lines */
    word-wrap: break-word;
    border: 1px solid rgba(0, 0, 0, 0.05);
    line-height: 1.6;
    font-size: 15px;
    color: #374151;
    position: relative;
}

.user .message-bubble {
    background: #0c8684;
    color: white;
    margin: 0;
    text-align: left; /* bubble text aligned left */
}

.message-group.user .message-time {
    text-align: right;
}

.message-group.assistant .message-time {
    text-align: left;
}

.assistant .message-bubble {
    text-align: left;
}

.message-group.assistant {
    justify-content: flex-start;
}

.message-group.user {
    flex-direction: row-reverse; /* avatar on right */
    justify-content: flex-end; /* push whole group to the right */
}

    .message-group.user .message-content {
        align-items: flex-end; /* bubble + time aligned right */
    }

.message-bubble::before {
    content: '';
    position: absolute;
    top: 12px;
    width: 0;
    height: 0;
    border: 6px solid transparent;
}

.assistant .message-bubble::before {
    left: -12px;
    border-right-color: white;
}

.user .message-bubble::before {
    right: -12px;
    border-left-color: var(--text);
}

.message-time {
    font-size: 12px;
    color: #9ca3af;
    margin-top: 8px;
    text-align: right;
}

.assistant .message-time {
    text-align: left;
}

.typing-indicator {
    display: none;
    align-items: center;
    gap: 8px;
    margin: 15px 0;
}

.typing-dots {
    display: flex;
    gap: 4px;
}

.typing-dot {
    width: 8px;
    height: 8px;
    background: white;
    border-radius: 50%;
    animation: typing 1.4s infinite;
}

    .typing-dot:nth-child(2) {
        animation-delay: 0.2s;
    }

    .typing-dot:nth-child(3) {
        animation-delay: 0.4s;
    }

@@keyframes typing {
    0%, 60%, 100% {
        transform: scale(1);
        opacity: 0.5;
    }

    30% {
        transform: scale(1.2);
        opacity: 1;
    }
}

.chat-input-container {
    padding: 20px 25px;
    background: black;
}

.chat-input-wrapper {
    position: relative;
    display: flex;
    align-items: flex-end;
    gap: 12px;
    background: black;
    border: 2px solid var(--text);
    border-radius: 100px;
    padding: 12px 16px;
    transition: all 0.3s ease;
}

.chat-input {
    flex: 1;
    border: none;
    outline: none;
    margin-bottom: 7px;
    margin-left: 5px;
    background: transparent;
    font-size: 15px;
    line-height: 1.5;
    resize: none;
    min-height: 24px;
    max-height: 120px;
    font-family: inherit;
    color: white;
}

    .chat-input::placeholder {
        color: White;
    }

.send-button {
    width: 40px;
    height: 40px;
    border: none;
    background: white;
    color: var(--text);
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    font-size: 16px;
}

    .send-button:hover:not(:disabled) {
        transform: scale(1.05);
    }

    .send-button:disabled {
        color: white;
        background: linear-gradient(135deg, var(--text) 0%, black 100%);
        cursor: not-allowed;
        transform: none;
    }

.welcome-message {
    text-align: center;
    padding: 40px 20px;
    color: white;
}

    .welcome-message i {
        font-size: 48px;
        margin-bottom: 20px;
        color: var(--text);
    }

    .welcome-message h2 {
        font-size: 24px;
        margin-bottom: 8px;
        color: white;
    }

    .welcome-message p {
        font-size: 16px;
        line-height: 1.5;
    }

.error-message {
    background: #fee2e2 !important;
    border: 1px solid #fecaca !important;
    color: #dc2626 !important;
}

    .error-message::before {
        border-right-color: #fee2e2 !important;
    }


@@media (max-width: 768px) {
    body {
        padding: 10px;
    }

    .chat-container {
        height: 90vh;
        border-radius: 15px;
    }

    .chat-header {
        padding: 15px 20px;
    }

    .header-info h1 {
        font-size: 18px;
    }

    .chat-messages {
        padding: 20px 15px;
    }

    .chat-input-container {
        padding: 15px 20px;
    }

    .message-bubble {
        padding: 12px 16px;
        font-size: 14px;
    }
}
</style>
<div class="chat-container">
    <div class="chat-header">
        <div class="ai-avatar">
            <i class="fas fa-robot"></i>
        </div>
        <div class="header-info">
            <h1>AI Assistant</h1>
            <p>Powered by advanced AI technology</p>
        </div>
        <div class="status-indicator">⌬</div>
    </div>

    <div class="chat-messages" id="chatMessages">
        <div class="welcome-message">
            <i class="fas fa-comments"></i>
            <h2>Welcome to AI Assistant</h2>
            <p>I'm here to help you with questions, and conversations.<br>What would you like to know today?</p>
        </div>
    </div>

    <div class="chat-input-container">
        <div class="typing-indicator" id="typingIndicator">
            <div class="message-avatar">
                <i class="fas fa-robot"></i>
            </div>
            <div>
                <span style="color: #6b7280; font-size: 14px;">AI is typing</span>
                <div class="typing-dots">
                    <div class="typing-dot"></div>
                    <div class="typing-dot"></div>
                    <div class="typing-dot"></div>
                </div>
            </div>
        </div>

        <div class="chat-input-wrapper">
            <textarea id="messageInput"
                      class="chat-input"
                      placeholder="Type your message here..."
                      rows="1"></textarea>
            <button id="sendButton" class="send-button">
                <i class="fas fa-paper-plane"></i>
            </button>
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        const chatMessages = $('#chatMessages');
        const messageInput = $('#messageInput');
        const sendButton = $('#sendButton');
        const typingIndicator = $('#typingIndicator');

        // Auto-resize textarea
        messageInput.on('input', function () {
            this.style.height = 'auto';
            this.style.height = Math.min(this.scrollHeight, 120) + 'px';

            // Enable/disable send button
            const hasContent = this.value.trim().length > 0;
            sendButton.prop('disabled', !hasContent);
            });

        // Send message on Enter (Shift+Enter for new line)
        messageInput.on('keydown', function (e) {
            if (e.key === 'Enter' && !e.shiftKey) {
                e.preventDefault();
                sendMessage();
            }
    });

    // Send button click
    sendButton.on('click', sendMessage);

    function sendMessage() {
        const message = messageInput.val().trim();
        if (!message) return;

        // Hide welcome message
        $('.welcome-message').fadeOut(300);

        // Add user message
        addMessage(message, 'user');

        // Clear input and reset height
        messageInput.val('').css('height', 'auto');
        sendButton.prop('disabled', true);

        // Show typing indicator
        showTypingIndicator();

        // Simulate AI response (replace with your actual API call)
        setTimeout(() => {
            hideTypingIndicator();
            handleAIResponse(message);
        }, 1500 + Math.random() * 1000); // Random delay for realism
    }

    function handleAIResponse(userMessage) {
        // Replace this with your actual AJAX call
        $.ajax({
            url: '/AI/GetAnswer',
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify({ Question: userMessage, Answer: "" }),
            success: function (response) {
                if (response.success) {
                    addMessage(response.response, 'assistant');
                } else {
                    addMessage('I apologize, but I encountered an error processing your request. Please try again.', 'assistant', true);
                }
            },
            error: function () {
                addMessage('I\'m having trouble connecting right now. Please check your connection and try again.', 'assistant', true);
            }
        });
    }

    function addMessage(content, sender, isError = false) {
        const time = new Date().toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });
        const avatar = sender === 'user' ? '<i class="fas fa-user"></i>' : '<i class="fas fa-robot"></i>';
        const errorClass = isError ? 'error-message' : '';

        const messageHTML = `
            <div class="message-group ${sender}">
                <div class="message-avatar">${avatar}</div>
                <div class="message-content">
                    <div class="message-bubble ${errorClass}">${content}</div>
                    <div class="message-time">${time}</div>
                </div>
            </div>
        `;

        chatMessages.append(messageHTML);
        scrollToBottom();
    }

    function showTypingIndicator() {
        typingIndicator.css('display', 'flex').hide().fadeIn(300);
        scrollToBottom();
    }

    function hideTypingIndicator() {
        typingIndicator.fadeOut(300);
    }

    function scrollToBottom() {
        chatMessages.animate({
            scrollTop: chatMessages[0].scrollHeight
        }, 300);
    }

    // Initialize
    sendButton.prop('disabled', true);
});
</script>